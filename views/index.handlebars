<div class="jumbotron jumbotron-fluid jumbg">
  <div class="container text-center">
    <h1>Burger Time!</h1>
    <form class="create-form">
      <div class="form-group">
        <input class="burger-form form-input" type="text" id="burg-name" name="name" placeholder="Enter Burger Here">
        <button type="submit" class="btn btn-dark" id="addburger"> Add </button>
      </div>
    </form>
    <img src="/assets/img/burger.png" alt="burger" style="height:300px; width:400px;">
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col">
      <h3 class="burger-list-header text-center">Burgers Hot Off The Grill!</h3>
      <ul class="burger-list list-group list-group-flush">
        {{#each burgers}}
        {{#unless devoured}}
        <ul class="burger-item text-center">
          <span class="burger-label">{{this.burger_name}}
            <button style="margin:5px;" type="button" class="eat-burger btn btn-success" id="eat-button"
              data-id="{{this.id}}" data-newDevoured="{{devour}}"> Eat This One! </button>
          </span>
        </ul>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col">
      <h3 class="burger-list-header text-center">Burgers You've Devoured!</h3>
      <ul class="burger-list list-group list-group-flush">
        {{#each burgers}}
        {{#if devoured}}
        <ul class="burger-item text-center">
          <span class="burger-label">{{this.burger_name}}
            <button style="margin:5px;" type="button" class="delete-burger btn btn-danger" id="delete-button"
              data-id="{{this.id}}" data-newDevoured="{{devour}}"> Flush It! </button>
          </span>
        </ul>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>